# GrantSeeker AI - Simple Test Container
# Fast validation version with no heavy ML dependencies
FROM python:3.10-slim

LABEL maintainer="GrantSeeker AI Platform" \
      description="Simple test container for validating deployment pipeline" \
      version="1.0.0-test"

# Set working directory
WORKDIR /app

# Install minimal system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy minimal requirements
COPY requirements-test.txt .

# Install minimal Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-test.txt

# Copy simple test API
COPY flask_simple_test_api.py .

# Create necessary directories
RUN mkdir -p /app/logs /app/cache

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    FLASK_ENV=production

# Expose port 8000
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Use non-root user for security
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app && \
    chmod -R 755 /app
USER appuser

# Run simple test API
CMD ["python", "flask_simple_test_api.py"]